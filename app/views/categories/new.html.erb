<div>
<%= form_with model: @category do |form| %>
  <div>
   <%= form.text_field :name, placeholder: 'Category name', required: true %>
  </div>
  <div>
    <%= form.label :icon, 'Select Icon:' %>
    <%= form.select :icon, [['Investment', 'earning.png'], ['Health', 'hospital-building.png'],
    ['Shopping', 'shopping-bag.png'], ['Sports', 'sports.png'], ['Movies', 'popcorn.png'], ['Travel', 'transportation.png'],
    ['Others', 'more.png']], placeholder: 'Icon' %>
  </div>

  <div>
    <%= form.submit "Save" %>
  </div>
<% end %>
</div>